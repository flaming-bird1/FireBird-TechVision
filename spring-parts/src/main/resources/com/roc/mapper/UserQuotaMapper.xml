<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.roc.mapper.UserQuotaMapper">
    <update id="updateUserQuota">
        update user_quota set used_quota = #{usedQuota} where user_id = #{userId}
    </update>
    <select id="selectByUserId" resultType="com.roc.entity.UserQuota">
        select * from user_quota where user_id = #{userId}
    </select>
</mapper>